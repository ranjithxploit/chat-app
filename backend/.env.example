# Environment variables template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chillchat?retryWrites=true&w=majority
DB_NAME=chillchat

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# WebRTC Configuration (for voice calls)
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=turn:your_turn_server:3478
WEBRTC_TURN_USERNAME=your_turn_username
WEBRTC_TURN_CREDENTIAL=your_turn_credential

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379

# Admin Configuration
ADMIN_SECRET_KEY=your_admin_secret_key_here